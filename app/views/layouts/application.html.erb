<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <% if !signed_in? %>
    <%= link_to 'Log in', new_user_session_path %>
    <%= link_to 'Sign up', new_user_registration_path %>

    <% else %>
    <%= link_to 'Change your location', root_path %> |
    <%= link_to 'Your saved restaurants', user_path(current_user) %> |
    <%= link_to 'Pick a new restaurant', new_restaurant_path %> |
    <%= link_to 'Log out', destroy_user_session_path, method: :delete, data: {confirm: "Are you sure you want to log out?"} %>
    <% end %>
    </nav>
  
    <%= yield %>

  </body>
</html>
