
<div class="wrapper-edit">
  <div class="background-edit"></div>
  <div class="one-edit">
<h1> Edit your review </h1>
</div>
<div class="two-edit">
<%= form_with model: @restaurant do |f| %>
<%= f.label :name %>:<br>
<%= f.text_field :name %><br>
<%= f.label :what_you_ordered %>:
<%= f.text_field :order %><br>
<%= f.label :review %>:<br>
<%= f.text_area :review %><br>
<%= f.label :restaurant_address %>
<%= f.text_field :address %><br>

<%= f.submit "Update your review" %>

<% end %>

</div>
